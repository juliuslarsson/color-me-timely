{
  "name": "color-me-timely",
  "displayName": "Color me timely",
  "description": "Non-disruptive timer",
  "version": "0.0.2",
  "publisher": "juliuslarsson",
  "galleryBanner": {
    "color": "#FFFFFF",
    "theme": "dark",
    "image": "assets/logo.png"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juliuslarsson/color-me-timely.git"
  },
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "color-me-timely.setStartColor",
        "title": "Set start color"
      },
      {
        "command": "color-me-timely.setTargetColor",
        "title": "Set target"
      },
      {
        "command": "color-me-timely.resetColor",
        "title": "Reset color"
      },
      {
        "command": "color-me-timely.startTimer",
        "title": "Start timer"
      },
      {
        "command": "color-me-timely.cancelTimer",
        "title": "Cancel timer"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}